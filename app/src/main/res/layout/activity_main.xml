<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.helloroni.livescoreandscheduleofipl2019.MainActivity"
    android:gravity="center"
    android:background="@drawable/button_background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/button4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/live"
            android:textSize="13sp"
            android:drawableTop="@drawable/ic_live_tv_black_24dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/backgraound"
            android:textColor="#262626"
            android:padding="12dp"
            android:drawablePadding="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"

            />

        <Button
            android:id="@+id/button5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/predition"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/ic_notifications_active_black_24dp"
            android:textSize="13sp"
            android:textColor="#262626"
            android:background="@drawable/backgraound"
            android:layout_marginTop="15dp"
            android:padding="12dp"
            android:drawablePadding="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/button6"
            android:layout_width="150dp"
            android:drawableTop="@drawable/ic_schedule_black_24dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="@string/schedule"
            android:textSize="13sp"
            android:textColor="#262626"
            android:background="@drawable/backgraound"
            android:layout_marginTop="15dp"
            android:padding="12dp"
            android:drawablePadding="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            />
        <Button
            android:id="@+id/button7"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/team"
            android:drawableTop="@drawable/ic_group_black_24dp"
            android:paddingTop="10dp"
            android:textSize="13sp"
            android:textColor="#262626"
            android:background="@drawable/backgraound"
            android:layout_marginTop="15dp"
            android:padding="12dp"
            android:drawablePadding="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/button10"
            android:layout_width="150dp"
            android:paddingTop="10dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_local_bar_black_24dp"
            android:text="@string/winner"
            android:textSize="13sp"
            android:textColor="#262626"
            android:background="@drawable/backgraound"
            android:drawablePadding="7dp"
            android:padding="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            />

        <Button
            android:id="@+id/button9"
            android:layout_width="150dp"
            android:paddingTop="10dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_format_align_justify_black_24dp"
            android:text="@string/Stadium"
            android:textSize="13sp"
            android:textColor="#262626"
            android:background="@drawable/backgraound"
            android:drawablePadding="7dp"
            android:padding="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/button11"
            android:layout_width="150dp"
            android:paddingTop="10dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_import_contacts_black_24dp"
            android:text="@string/pointtable"
            android:textSize="13sp"
            android:textColor="#262626"
            android:background="@drawable/backgraound"
            android:drawablePadding="7dp"
            android:padding="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            />


    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id" />

</LinearLayout>